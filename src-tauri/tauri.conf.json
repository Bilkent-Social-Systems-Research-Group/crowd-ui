{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "npm run build",
		"beforeDevCommand": "npm run dev",
		"devPath": "http://localhost:5173",
		"distDir": "../build"
	},
	"package": {
		"productName": "crowd",
		"version": "0.1.0"
	},
	"plugins": {
		"log": {
			"level": "debug",
			"file": {
				"path": "app.log",
				"level": "info"
			}
		}
	},
	"tauri": {
		"allowlist": {
			"fs": {
				"all": true,
				"readFile": true,
				"writeFile": true,
				"readDir": true,
				"copyFile": true,
				"createDir": true,
				"removeDir": true,
				"removeFile": true,
				"renameFile": true,
				"exists": true
			},
			"shell": {
				"all": false,
				"execute": false,
				"open": true,
				"scope": [],
				"sidecar": false
			},
			"dialog": {
				"all": true
			}
		},
		"bundle": {
			"active": true,
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "crowdv1",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": "default-src 'self' blob: data: filesystem:; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:;"
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"height": 600,
				"resizable": true,
				"title": "Crowd",
				"width": 800
			}
		]
	}
}
